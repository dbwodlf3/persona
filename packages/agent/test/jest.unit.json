{
    "moduleFileExtensions": [
        "js",
        "ts"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "preset": "ts-jest",
    "testMatch": [
        "<rootDir>/**/*.unit-spec.ts"
    ],
    "collectCoverageFrom": [
        "src/**/*.{js,jsx,tsx,ts}",
        "!**/node_modules/**",
        "!**/vendor/**"
    ],
    "coverageReporters": [
        "json",
        "lcov"
    ]
}